# Exercise 1: Multiplication table
def multiplication_table(number):
    for i in range(1, 11):
        result = i * number
        print(str(i) + " x " + str(number) + " = " + str(result))

# Test the function
multiplication_table(12)


# Exercise 2: Sum of two strings (common characters)
def common_characters(string1, string2):
    count = 0
    checked_chars = ""
    
    for char in string1:
        if char in string2 and char not in checked_chars:
            count = count + 1
            checked_chars = checked_chars + char
    
    return count

# Test the function
result = common_characters("bee", "peer")
print(result)


# Exercise 3: Guessing a number
import random

def guess_number(user_guess):
    secret_number = random.randint(1, 10)
    
    if user_guess > secret_number:
        return "Too big"
    elif user_guess < secret_number:
        return "Too small"
    else:
        return "You are SUPER"

# Test the function
user_input = input("Enter a number between 1 and 10: ")
user_input = int(user_input)
result = guess_number(user_input)
print(result)
